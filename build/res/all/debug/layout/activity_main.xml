<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Designaciones Arbitrales"
            android:id="@+id/textViewTitulo1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:textSize="27dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="FBCV"
            android:id="@+id/textViewTitulo2"
            android:layout_below="@+id/textViewTitulo1"
            android:layout_centerHorizontal="true"
            android:textSize="27dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nº Licencia:"
            android:id="@+id/textViewLicencia"
            android:layout_marginTop="140dp"
            android:layout_below="@+id/textViewTitulo2"
            android:layout_alignLeft="@+id/textViewTitulo1"
            android:textSize="23dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nº DNI:"
            android:id="@+id/textViewDNI"
            android:layout_below="@+id/textViewLicencia"
            android:layout_alignLeft="@+id/textViewLicencia"
            android:layout_marginTop="13dp"
            android:textIsSelectable="false"
            android:textSize="23dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextLicencia"
            android:layout_alignBottom="@+id/textViewLicencia"
            android:layout_alignRight="@+id/textViewTitulo1"
            android:layout_toRightOf="@+id/textViewLicencia"
            android:layout_marginLeft="10dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextDNI"
            android:layout_below="@+id/editTextLicencia"
            android:layout_alignLeft="@+id/editTextLicencia"
            android:layout_alignRight="@+id/editTextLicencia"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:id="@+id/buttonEnviar"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/editTextDNI"
            android:layout_alignRight="@+id/editTextDNI"
            android:layout_alignLeft="@+id/textViewDNI"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduzca sus datos para acceder."
            android:id="@+id/textView3"
            android:layout_above="@+id/editTextLicencia"
            android:layout_alignLeft="@+id/textViewLicencia"
            android:layout_marginBottom="20dp"/>
</RelativeLayout>

